<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dsgj.youyuntong.activity.Search.SearchResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/titleColor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_search_result_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@mipmap/fanhui"/>

        <TextView
            android:id="@+id/tv_all_search_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:background="@drawable/shape_white_normal"
            android:drawablePadding="5dp"
            android:drawableStart="@mipmap/sousuo_sousuo"
            android:hint="@string/searchTips"
            android:paddingBottom="5dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:textColor="@color/gray99"
            android:textSize="15sp"/>

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_search_result_table"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        app:tabIndicatorColor="@color/blue_text"
        app:tabSelectedTextColor="@color/blue_text"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/black"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="-1.5dp"
        android:background="@color/division_line_color">
    </View>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
