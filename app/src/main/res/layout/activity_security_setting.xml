<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dsgj.youyuntong.activity.mine.SecuritySettingActivity">

    <include
        layout="@layout/layout_message_title"/>

    <RelativeLayout
        android:id="@+id/rv_real_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="@string/real_name"
            android:textColor="@color/black33"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/about"
            android:src="@mipmap/woyaohezuo_xiala"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_show_insert"
        android:layout_width="match_parent"
        android:layout_height="101.5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_white_normal"
        android:orientation="vertical"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/people_name"
                android:textColor="@color/gray"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/et_insert_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@null"
                android:cursorVisible="false"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"/>

        </LinearLayout>


        <include
            layout="@layout/layout_division_line"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/ID"
                android:textColor="@color/gray"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/et_insert_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@null"
                android:cursorVisible="false"
                android:maxLines="1"
                android:hint="@string/need_id"
                android:singleLine="true"


                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_success_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/success"/>

    <Button

        android:id="@+id/btn_realName_ok"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/selector_button_normal_blue"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:textSize="18sp"
        />


</LinearLayout>
