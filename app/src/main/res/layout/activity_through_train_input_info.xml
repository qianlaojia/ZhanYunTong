<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dsgj.youyuntong.activity.OrderInputInfoActivity">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        android:layout_marginTop="48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_input_info_spot_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/qingMing"
                    android:textColor="@color/gray"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_input_info_spot_name"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="9dp"
                    android:text="@string/pay_style_details"
                    android:textColor="@color/colorOrange"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_price"
                    android:layout_below="@id/tv_input_info_spot_name"
                    android:layout_marginTop="9dp"
                    android:layout_toEndOf="@id/tv_price"
                    android:text="@string/danjia"
                    android:textColor="@color/colorOrange"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_visitor_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_price"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="9sp"
                    android:text="@string/tv_visitor_counter"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_visitor_counter_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_price"
                    android:layout_marginTop="9dp"
                    android:layout_toEndOf="@id/tv_visitor_counter"
                    android:text="@string/one_people"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_start_time_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_visitor_counter"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="9dp"
                    android:text="@string/startTime"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_start_time_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_visitor_counter"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="9dp"
                    android:layout_toEndOf="@id/tv_start_time_info"
                    android:text="@string/startTime"
                    android:textSize="12sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white">


                <TextView
                    android:id="@+id/tv_input_info_from_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/fromLocations"
                    android:textColor="@color/gray"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_go_of_location_unchangeable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_input_info_from_location"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="9dp"
                    android:text="@string/fromLocations2"/>

                <TextView
                    android:id="@+id/tv_start_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_input_info_from_location"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="9dp"
                    android:layout_toEndOf="@id/tv_go_of_location_unchangeable"
                    android:text="@string/fromZZ"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_order_person_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/orderPersonInformation"
                    android:textColor="@color/gray"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_order_person_information"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/people_name"/>

                <TextView
                    android:id="@+id/tv_input_info_order_person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_order_person_information"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/tv_name"
                    android:text="@string/people_name"/>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/phone_number"/>

                <TextView
                    android:id="@+id/tv_input_info_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/tv_phone"
                    android:text="@string/phone_details"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_visitor_info_unchangeable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/Visitor_info"
                    android:textColor="@color/gray"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_to_common_visitor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/common_visitor"
                    android:textColor="@color/blue_text"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rl_visitor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_to_common_visitor"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/notice"
                    android:textColor="@color/gray"
                    android:textSize="15sp"/>


            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <include
        layout="@layout/layout_message_title"/>

    <include
        layout="@layout/layout_through_train_input_info_bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        />
</FrameLayout>
