<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_home_search"
                android:layout_width="match_parent"
                android:layout_height="76dp"
               android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">


    <TextView
        android:id="@+id/tv_item_common_visitor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/name"/>

    <TextView
        android:id="@+id/tv_item_common_visitor_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_common_visitor_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/ID"/>

    <TextView
        android:id="@+id/tv_item_common_visitor_name_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_item_common_visitor_name"
        android:layout_toEndOf="@id/tv_item_common_visitor_name"
        android:text="@string/qingMing"
        android:textColor="@color/gray"

        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_item_common_visitor_id_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_item_common_visitor_id"
        android:layout_toEndOf="@id/tv_item_common_visitor_id"
        android:text="@string/number_demo"
        android:textColor="@color/gray"/>

    <ImageView
        android:id="@+id/iv_common_visitor_item_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:src="@mipmap/changyongchengke_weixuanze"/>
</RelativeLayout>