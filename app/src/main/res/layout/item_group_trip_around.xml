<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fl_no_use"
        android:layout_width="match_parent"
        android:layout_height="151dp">

        <ImageView
            android:id="@+id/iv_group_trip_around_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/image"
            android:contentDescription="@string/LogAndRegister"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_gravity="bottom"
            android:background="@color/gray1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginStart="11dp"
                android:gravity="center_vertical"
                android:text="@string/fromZZ"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="11dp"
                android:text="@string/ZHouBianYou"
                android:textColor="@color/white"
                android:textSize="12sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/tv_scenic_rv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_price_background"
                android:gravity="center"
                android:paddingEnd="21dp"
                android:paddingStart="10dp"
                android:text="@string/money_details"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_scenic_rv_price"
                android:layout_marginStart="-20dp"
                android:layout_toEndOf="@+id/tv_scenic_rv_price"
                android:background="@drawable/shape_price_background"
                android:text="@string/qi"
                android:textColor="@color/white"
                android:textSize="13sp"/>

        </RelativeLayout>


    </FrameLayout>

    <TextView
        android:id="@+id/tv_scenic_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_no_use"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:text="@string/scenicName"
        android:textColor="@color/textColor"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_scenic_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_scenic_name"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:text="@string/scenicIntroduce"
        android:textColor="@color/text_color_6"/>


</RelativeLayout>
