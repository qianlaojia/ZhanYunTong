<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/home_item_RelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/Image"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <ImageView
            android:id="@+id/home_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/image"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:background="@color/gray1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="11dp"
                android:text="郑州出发"
                android:textColor="@color/white"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="11dp"
                android:text="周边游"
                android:textColor="@color/white"
                android:textSize="12sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shape_price_background"
                android:gravity="center"
                android:text="906起"
                android:textColor="@color/white"
                android:textSize="12sp"/>

        </RelativeLayout>


    </FrameLayout>

    <TextView
        android:id="@+id/tv_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Image"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:text="云台山二日一晚跟团游"
        android:textColor="@color/textColor"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_big"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:text="三步一泉，五步一瀑，十步一潭"
        android:textColor="@color/text_color_6"/>


</RelativeLayout>