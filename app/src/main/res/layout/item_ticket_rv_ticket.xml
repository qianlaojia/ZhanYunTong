<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

    <ImageView
       android:id="@+id/iv_ticket_vrv_item"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="9dp"
        android:src="@mipmap/shilitu"
        android:contentDescription="@string/already_cancel"
        android:scaleType="centerCrop"/>

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/tv_ticket_vrv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:textColor="@color/gray"
        android:layout_toEndOf="@id/iv_ticket_vrv_item"
        android:text="@string/qingMing"/>

    <TextView
        android:id="@+id/tv_ticket_vrv_item_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ticket_vrv_item_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toEndOf="@id/iv_ticket_vrv_item"
        android:text="@string/introduce"/>

    <TextView

        android:id="@+id/tv_ticket_vrv_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_ticket_vrv_item_introduce"
        android:layout_marginEnd="30dp"
        android:text="@string/prise"
        android:textColor="@color/colorTextOrange"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_ticket_vrv_item_introduce"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="-25dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/tv_ticket_vrv_item_price"

        android:text="@string/qi"/>
</RelativeLayout>
