<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="108dp"
              android:layout_height="36dp"
              android:background="@drawable/shape_visitor_background_blue"
              android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/tv_reduce"
        android:layout_width="35dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginStart="1dp"
        android:background="@drawable/shape_visitor_background_left_gray"
        android:gravity="center"
        android:text="@string/reduce"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_show_number"
        android:layout_width="35dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginStart="1dp"
        android:gravity="center"
        android:text="@string/one"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="35dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginEnd="1dp"
        android:background="@drawable/shape_visitor_background_right_gray"
        android:gravity="center"
        android:text="@string/add"
        android:textSize="18sp"
        android:textStyle="bold"/>

</LinearLayout>
